@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleControls" class="carousel slide mt-5" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/corousel1.jpg" class="img-fluid" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Fishing report from real Anglers.</h5>
                <p>Real Anglers reports always !</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/corousel2.jpg" class="img-fluid" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Condition Reports</h5>
                <p>Do you ever wonder when the fish is active?</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/corousel3.jpg" class="img-fluid" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Share your favorite spot!!</h5>
                <p>Share where you catch fish with your friends !</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>